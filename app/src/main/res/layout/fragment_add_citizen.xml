<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AddCitizenFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_color"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:title="Fuqoroning ma'lumotini qo'shish"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:textColor="#B8B3B3"
                app:boxStrokeColor="@color/text_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fuqoroning ismi" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_surname"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="5dp"
                android:textColor="#B8B3B3"
                app:boxStrokeColor="@color/text_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fuqoroning familiyasi" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_middlename"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="5dp"
                android:textColor="#B8B3B3"
                app:boxStrokeColor="@color/text_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_middlename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Otasining ismi" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_region"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="5dp"
                android:textColor="#B8B3B3"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#6C6C6C">

                <AutoCompleteTextView
                    android:id="@+id/choose_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Viloyati"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_city"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="5dp"
                android:textColor="#B8B3B3"
                app:boxStrokeColor="@color/text_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Shahar, tuman" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_description"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="5dp"
                android:textColor="#B8B3B3"
                app:boxStrokeColor="@color/text_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Uyning manzili" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_passport_date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="5dp"
                android:textColor="#B8B3B3"
                app:boxStrokeColor="@color/text_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_date"
                    android:layout_width="match_parent"
                    android:focusableInTouchMode="false"
                    android:inputType="none|textNoSuggestions"
                    android:cursorVisible="false"
                    android:layout_height="wrap_content"
                    android:hint="Passport olgan vaqti"
                  />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_passport_best_before"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="5dp"
                android:textColor="#B8B3B3"
                app:boxStrokeColor="@color/text_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_passport_best_before"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:inputType="none|textNoSuggestions"
                    android:cursorVisible="false"
                    android:hint="Passport muddati"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/container_gender"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="5dp"
                android:textColor="#B8B3B3"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#6C6C6C">

                <AutoCompleteTextView
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jinsi"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/image"
                android:layout_width="115dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/place_holderimage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Fuqoroning rasmi 3x4"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="119dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/main_color"
                android:text="Saqlash"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>